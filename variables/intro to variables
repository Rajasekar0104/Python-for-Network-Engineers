# A variable is used to store temporary data in memory
# In network automation, variables store device-related information

router_name = "Chennai-Core-01"   # String → Router hostname
router_ip = "10.10.10.1"          # String → Management IP address
ssh_port = 22                     # Integer → SSH port number
is_reachable = True               # Boolean → Device reachability status

# Printing variable values
print("Router Name:", router_name)
print("Router IP:", router_ip)
print("SSH Port:", ssh_port)
print("Reachable:", is_reachable)
